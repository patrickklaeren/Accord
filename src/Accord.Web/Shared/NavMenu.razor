<header class="p-3 bg-dark text-white">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
          <img src="icon.svg" alt="Logo" class="bi me-2" width="40" height="32">
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="#" class="nav-link px-2 text-secondary">Accord</a></li>
          <li><a href="#" class="nav-link px-2 text-white">Settings</a></li>
        </ul>

        <div class="text-end">
            <AuthorizeView>
                <Authorized>
                    <a href="#">Hello, @context.User.Identity!.Name!</a>
                  <a class="btn btn-warning" href="Account/Logout">Log out</a>
                </Authorized>
                <NotAuthorized>
                   <a class="btn btn-outline-light me-2" href="Account/Login">Login</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>
      </div>
    </div>
  </header>
